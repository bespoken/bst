  "bin": {
    "bst": "./bin/bst.js",
    "bst-server": "./bin/bst-server.js"
  },
  "dependencies": {
    "async": "^2.0.0",
    "aws-sdk": "^2.6.8",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "node-zip": "^1.1.1",
    "properties-reader": "0.0.15",
    "request": "^2.74.0",
    "sinon": "^1.17.5",
    "typescript": "^1.8.10",
    "uuid": "3.0.0",
    "winston": "^2.2.0",
    "wrench": "^1.5.9"
  },
  "devDependencies": {
    "bst-typedoc": "^0.4.6",
    "coveralls": "^2.11.11",
    "gulp": "^3.9.1",
    "gulp-bst-typedoc": "^2.0.1",
    "gulp-mocha": "^3.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-run": "^1.7.1",
    "gulp-shell": "^0.5.2",
    "gulp-tslint": "^6.1.2",
    "istanbul": "^0.4.4",
    "mocha": "2.5.3",
    "mocha-lcov-reporter": "^1.2.0",
    "mockery": "^1.7.0",
